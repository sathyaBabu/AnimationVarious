<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <RadioGroup
        android:id="@+id/rdAnimationType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rdTwinAnimation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tween Animation" />

        <RadioButton
            android:id="@+id/rdPropertyAnimation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Property Animation" />

    </RadioGroup>

    <Button
        android:id="@+id/buttonAlphaAnimation"
        android:layout_width="250dp"
        android:background="@drawable/bluebutton"
        android:layout_height="50dp"
        android:text="Alpha" />

    <Button
        android:id="@+id/buttonRotateAnimation"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:background="@drawable/cogheader"
        android:text="Roate" />

    <Button
        android:id="@+id/buttonTranslateAnimation"
        android:layout_width="250dp"
        android:background="@drawable/googlemapslogo"
        android:layout_height="wrap_content"
        android:text="Translate" />

    <Button
        android:id="@+id/buttonScaleAnimation"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="@drawable/cognativefooter"
        android:text="Scale" />

    <Button
        android:id="@+id/buttonSetAnimation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/crossboxred"
        android:text="Set" />

</LinearLayout>
